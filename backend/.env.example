# Application Settings
PROJECT_NAME="SMS Control Tower"
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/sms_control_tower

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE=your-service-role-key-here

# JWT Configuration (from Supabase)
JWT_SECRET_KEY=your-jwt-secret-from-supabase
JWT_ALGORITHM=HS256

# CORS Origins (Frontend URLs)
BACKEND_CORS_ORIGINS=["http://localhost:3000","https://localhost:3000","http://localhost:3001"]

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_MESSAGING_SERVICE_SID=your-messaging-service-sid
TWILIO_WEBHOOK_URL=https://your-domain.com/api/v1/webhooks/twilio

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# SMS Settings
DEFAULT_RATE_LIMIT_MPS=3
DEFAULT_QUIET_HOURS_START=20:00
DEFAULT_QUIET_HOURS_END=08:00
DEFAULT_TIMEZONE=America/Chicago

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here