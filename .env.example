# =============================================================================
# SMS Control Tower - Frontend Environment Configuration Example
# =============================================================================
# Copy this file to .env.local and update with your local configuration
# Backend configuration is in backend/.env

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# FRONTEND API CONFIGURATION
# =============================================================================
# Backend API URL - Update to match your backend server
# For local development, use: http://localhost:8000/api/v1
# For network development, use: http://YOUR_IP:8000/api/v1
VITE_API_URL=http://localhost:8000/api/v1
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# WebSocket Configuration
VITE_WS_URL=ws://localhost:8000/ws
VITE_WS_RECONNECT_DELAY=3000
VITE_WS_MAX_RECONNECT_ATTEMPTS=5

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features for development
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_WEBHOOKS=true
VITE_ENABLE_CRM_INTEGRATION=true
VITE_ENABLE_WEBSOCKETS=false
VITE_ENABLE_REAL_TIME_UPDATES=false
VITE_ENABLE_MOCK_CONVERSATIONS=false
VITE_ENABLE_MOBILE_FEATURES=true

# =============================================================================
# DEMO & MOCK MODE
# =============================================================================
# Mock SMS sending (set to false to send real SMS in development)
MOCK_SMS_SENDING=true

# Demo mode flags
VITE_DEMO_MODE=false
VITE_ENABLE_MOCK_DATA=false

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
VITE_ANALYTICS_REFRESH_INTERVAL=30000
VITE_DASHBOARD_REFRESH_INTERVAL=15000

# =============================================================================
# APPLICATION INFO
# =============================================================================
VITE_APP_NAME=SMS Control Tower
VITE_APP_VERSION=1.0.0

# =============================================================================
# BACKEND CONFIGURATION (Reference - set in backend/.env)
# =============================================================================
# The following are configured in the backend, not frontend:
# - DATABASE_URL (PostgreSQL connection string)
# - JWT_SECRET_KEY (JWT signing key)
# - TWILIO_ACCOUNT_SID (Twilio account)
# - TWILIO_AUTH_TOKEN (Twilio auth token)
# - REDIS_URL (Redis connection for caching/queues)
# - SMTP_* (Email notification settings)
# =============================================================================
