{
  "name": "sms-marketing-system",
  "version": "1.0.0",
  "private": true,
  "description": "TCPA-compliant SMS marketing system for land buying and real estate investment",
  "scripts": {
    "dev": "vite",
    "dev:backend": "cd backend && ./scripts/start-dev.sh",
    "dev:fullstack": "concurrently \"npm run dev\" \"npm run dev:backend\" --names \"frontend,backend\" --colors",
    "build": "vite build",
    "build:backend": "cd backend && docker build -t sms-control-tower-backend .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:backend": "cd backend && ./scripts/run-tests.sh",
    "test:all": "npm run test && npm run test:backend",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "docker:up": "cd backend && docker-compose up -d",
    "docker:down": "cd backend && docker-compose down",
    "docker:logs": "cd backend && docker-compose logs -f"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.0.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.0.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.0.1",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^1.2.1",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.3",
    "@radix-ui/react-toast": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.0.5",
    "@tanstack/react-query": "^4.42.0",
    "@types/react-table": "^7.7.14",
    "axios": "^1.3.6",
    "class-variance-authority": "^0.6.0",
    "clsx": "^1.2.1",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.220.0",
    "react": "^18.2.0",
    "react-day-picker": "^9.9.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.43.9",
    "react-router-dom": "^6.8.1",
    "react-table": "^7.8.0",
    "recharts": "^2.5.0",
    "socket.io-client": "^4.6.1",
    "tailwind-merge": "^1.12.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-c8": "^0.30.1",
    "@vitest/ui": "^0.30.1",
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.2.1",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "jsdom": "^21.1.1",
    "postcss": "^8.4.21",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.2",
    "vite": "^4.5.14",
    "vitest": "^0.30.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
